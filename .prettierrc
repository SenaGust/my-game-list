{
  "semi": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": ["src/**/*.ts", "src/**/*.tsx"],
      "options": { "parser": "typescript" }
    }
  ]
}
